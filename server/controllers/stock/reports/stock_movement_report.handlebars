{{> head TITLE="REPORT.STOCK_MOVEMENT_REPORT.TITLE" }}

<script src="{{nodeModulesPath}}/chart.js/dist/Chart.min.js"></script>
<script src="{{nodeModulesPath}}/chartjs-plugin-datalabels/dist/chartjs-plugin-datalabels.min.js"></script>

<body>

  <div>
    {{> header}}

    <!-- body  -->
    <div class="row">
      <div class="col-xs-12">
        <h2 class="text-center">{{translate 'REPORT.STOCK_MOVEMENT_REPORT.TITLE'}}</h2>
        <h4 class="text-center">{{ depotText }}</h4>
        <h4 class="text-center">{{date dateFrom}} - {{date dateTo}}</h4>
      </div>
      
      <div class="col-xs-12">
        <canvas id="stockMovementReportChart" style="width:100%" height="330"></canvas>

        <div>
          {{#each chartLegend as | legend |}}
            <div>
              <span style="background-color:{{legend.color}}; display:inline-block; padding: 5px; margin-right: 10px;">&nbsp; &nbsp;</span>
              <span>{{legend.text}}</span>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

  <script>
   {{{chartjs}}}
  </script>

</body>