{{> head title="ACCOUNT.ACCOUNT_CHART"}}

<div class="container-fluid">

  {{> header }}

  <!-- title  -->
  <h1 class="text-center text-uppercase">
    {{translate 'ACCOUNT.ACCOUNT_CHART'}}
  </h1>

  <!-- content  -->
  <table class="table table-condensed table-striped table-bordered">
    <thead>
      <tr>
        <th class="text-left" style="width: 15%;">{{translate 'ACCOUNT.NUMBER'}}</th>
        <th>{{translate 'ACCOUNT.LABEL'}}</th>
        <th>{{translate 'FORM.LABELS.TYPE'}}</th>
        <th>{{translate 'ACCOUNT.COST_CENTER'}}</th>
        <th>{{translate 'ACCOUNT.PROFIT_CENTER'}}</th>
      </tr>
    </thead>

    <tbody>
      {{#each accounts}}
        {{#if this.is_title}}
          <tr>
            <td class="text-left"><strong>{{ this.number }}</strong></td>
            <td class="text-left">
              <strong style="margin-left: {{indentAccount this.depth}};">
                {{#if this.locked}}
                  <i class="fa fa-lock"></i>
                {{/if}}
                {{ this.label }}
              </strong>
            </td>
            <td>{{translate this.translation_key }}</td>
            <td>{{ this.cost_center_text }}</td>
            <td>{{ this.profit_center_text }}</td>
          </tr>
        {{else}}
          <tr>
            <td class="text-left">{{ this.number }}</td>
            <td class="text-left">
              <span  style="margin-left: {{indentAccount this.depth}};">
                {{#if this.locked}}
                  <i class="fa fa-lock"></i>
                {{/if}}
                {{ this.label }}
              </span>
            </td>
            <td>{{translate this.translation_key }}</td>
            <td>{{ this.cost_center_text }}</td>
            <td>{{ this.profit_center_text }}</td>
          </tr>
        {{/if}}
      {{/each}}
    </tbody>
  </table>
</div>
