{{> head title="ACCOUNT.ACCOUNT_CHART"}}

<div class="container-fluid">

  <!-- heading  -->
  <div class="row">
    <div class="col-xs-4">
      <h3 style="margin:2px;">{{ model.enterprise.name }}</h3>
      <p style="margin:2px;">
        {{translate 'FORM.LABELS.PROJECT'}}: {{ model.project.name }}<br>
        {{translate 'FORM.LABELS.PHONE'}}: {{ model.enterprise.phone }}<br>
        {{translate 'FORM.LABELS.EMAIL'}}: {{ model.enterprise.email }}<br>
        {{translate 'FORM.LABELS.ADDRESS'}}: {{ model.enterprise.location }}
      </p>
    </div>

    <div class="col-xs-4 col-xs-offset-4">
      <p style="margin:2px;" class="text-right">
        {{translate 'REPORT.PRODUCED_BY' }} {{ model.user.display_name }}<br>
        {{translate 'REPORT.PRODUCED_DATE' }} {{date }}
      </p>
    </div>
  </div>

  <!-- title  -->
  <h1 style="margin:15px; font-weight:bold" class="text-center text-uppercase">
    {{translate 'ACCOUNT.ACCOUNT_CHART'}}
  </h1>

  <!-- content  -->
  <table class="table table-condensed table-striped table-bordered">
    <thead>
      <tr>
        <th class="text-left" style="width: 15%;">{{translate 'ACCOUNT.NUMBER'}}</th>
        <th>{{translate 'ACCOUNT.LABEL'}}</th>
        <th>{{translate 'FORM.LABELS.TYPE'}}</th>
        <th>{{translate 'ACCOUNT.COST_CENTER'}}</th>
        <th>{{translate 'ACCOUNT.PROFIT_CENTER'}}</th>
      </tr>
    </thead>

    <tbody>
      {{#each model.data}}
        {{#if this.is_title}}
          <tr>
            <td class="text-left"><strong>{{ this.number }}</strong></td>
            <td class="text-left">
              <strong style="margin-left: {{indentAccount this.depth}};">
                {{#if this.locked}}
                  <i class="fa fa-lock"></i>
                {{/if}}
                {{ this.label }}
              </strong>
            </td>
            <td>{{translate this.translation_key }}</td>
            <td>{{ this.cost_center_text }}</td>
            <td>{{ this.profit_center_text }}</td>
          </tr>
        {{else}}
          <tr>
            <td class="text-left">{{ this.number }}</td>
            <td class="text-left">
              <span  style="margin-left: {{indentAccount this.depth}};">
                {{#if this.locked}}
                  <i class="fa fa-lock"></i>
                {{/if}}
                {{ this.label }}
              </span>
            </td>
            <td>{{translate this.translation_key }}</td>
            <td>{{ this.cost_center_text }}</td>
            <td>{{ this.profit_center_text }}</td>
          </tr>
        {{/if}}
      {{/each}}
    </tbody>
  </table>


</div>
