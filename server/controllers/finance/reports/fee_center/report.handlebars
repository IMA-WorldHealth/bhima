<!doctype html>
<html>
  {{> head title="TREE.FEE_CENTER_REPORT"}}
  <body>
  <div class="container">
    {{> header}}

    <!-- body -->
    <div class="row">
      <div class="col-xs-12">
        <!-- page title  -->
        <h3 class="text-center text-uppercase">
          <strong>{{translate 'TREE.FEE_CENTER_REPORT'}}</strong>
        </h3>

        <h4 class="text-center">
          <strong class="text-capitalize">{{date period.fiscalYearStart "MMMM YYYY"}}</strong>
           -
          <strong class="text-capitalize">{{date period.end_date "MMMM YYYY"}}</strong>
        </h4>

        {{#if display.costCenterOperations}}
        <table style="page-break-after: always; width: 80%; margin-right: auto; margin-left: auto" class="table table-striped table-condensed table-report table-bordered">
          <thead>
            <tr style="background-color:#cfcfcf"> 
              <th colspan="3" class="text-uppercase text-center">
                <h4>
                  <strong>
                    {{translate "TABLE.COLUMNS.COST_CENTER_OPERATIONS" }}
                  </strong>
                </h4>
              </th> 
            </tr>
          </thead>
          <tbody>
            <tr style="background-color:#dfdfdf; font-size: 15px"> 
              <td colspan="3" class="text-uppercase">
                <strong>
                  {{translate "TABLE.COLUMNS.PRINCIPAL_CENTERS" }}
                </strong>
              </td> 
            </tr>

            {{#each principalCostCenters}}
              <tr style="font-size: 12px">
                <td class="text-right"> {{add @index 1}} </td>
                <td> {{ label }} </td>
                <td class="text-right"> {{debcred cost_balance ../metadata.enterprise.currency_id}} </td>
              </tr>
            {{/each}}

            <tr style="background-color:#000;"> 
              <td colspan="3"></td> 
            </tr>

            <tr style="background-color:#dfdfdf; font-size: 15px"> 
              <td colspan="3" class="text-uppercase">
                <strong>
                  {{translate "TABLE.COLUMNS.AUXILIARY_CENTERS" }}
                </strong>
              </td> 
            </tr>

            {{#each auxiliaryCostCenters}}
              <tr style="font-size: 12px">
                <td  class="text-right"> {{add @index 1}} </td>
                <td> {{ label }} </td>
                <td class="text-right"> {{debcred cost_balance ../metadata.enterprise.currency_id}} </td>
              </tr>
            {{/each}}
          </tbody>
          <tfoot>
            <tr style="width: 5%; background-color: #cfcfcf">
              <td colspan="2" class="text-uppercase text-right">
                <i>
                  <strong> {{translate "TABLE.COLUMNS.TOTAL" }} : {{translate "TABLE.COLUMNS.COST_CENTER_OPERATIONS" }} </strong>
                </i>
              </td>
              <td class="text-right">
                <i>
                  <strong> {{debcred allCost metadata.enterprise.currency_id}} </strong>
                </i>
              </td>
            </tr>
          </tfoot>
        </table>
        <br>
        <br>
        {{/if}}

        {{#if display.profitCenterOperations }}
        <table style="page-break-after: always; width: 80%; margin-right: auto; margin-left: auto" class="table table-striped table-condensed table-report table-bordered">
          <thead>
            <tr style="background-color:#cfcfcf"> 
              <th colspan="3" class="text-uppercase text-center">
                <h4>
                  <strong>
                    {{translate "TABLE.COLUMNS.PROFIT_CENTER_OPERATIONS" }}
                  </strong>
                </h4>
              </th> 
            </tr>
          </thead>
          <tbody>
            <tr style="background-color:#dfdfdf; font-size: 15px"> 
              <td colspan="3" class="text-uppercase"> <strong> {{translate "TABLE.COLUMNS.PRINCIPAL_CENTERS" }} </strong></td> 
            </tr>
            {{#each principalProfitCenters}}
              <tr>
                <td class="text-right"> {{add @index 1}} </td>
                <td> {{ label }} </td>
                <td class="text-right"> {{debcred profit_balance ../metadata.enterprise.currency_id}} </td>
              </tr>
            {{/each}}

            <tr style="background-color:#000;"> 
              <td colspan="3"></td> 
            </tr>

            <tr style="background-color:#dfdfdf; font-size: 15px"> 
              <td colspan="3" class="text-uppercase"> <strong> {{translate "TABLE.COLUMNS.AUXILIARY_CENTERS" }} </strong></td> 
            </tr>
            {{#each auxiliaryProfitCenters}}
              <tr>
                <td class="text-right"> {{add @index 1}} </td>
                <td> {{ label }} </td>
                <td class="text-right"> {{debcred profit_balance ../metadata.enterprise.currency_id}} </td>
              </tr>
            {{/each}}
          </tbody>
          <tfoot>
            <tr style="width: 5%; background-color: #cfcfcf">
              <td colspan="2" class="text-uppercase text-right">
                <i>
                  <strong> {{translate "TABLE.COLUMNS.TOTAL" }} : {{translate "TABLE.COLUMNS.PROFIT_CENTER_OPERATIONS" }} </strong>
                </i>
              </td>
              <td class="text-right">
                <i>
                  <strong> {{debcred allProfit metadata.enterprise.currency_id}} </strong>
                </i>
              </td>
            </tr>
          </tfoot>
        </table>
        <br>
        <br>
        {{/if}}

        {{#if display.distributionCost }}
        <table style="page-break-after: always" class="table table-striped table-condensed table-report table-bordered">
          <thead>
            <tr style="background-color:#cfcfcf"> 
              <th class="text-uppercase text-center" colspan="{{ colspanAuxCost }}">
                <h4>
                  <strong>
                    {{translate "TABLE.COLUMNS.DISTRIBUTION_COST" }}
                  </strong>
                </h4>
              </th> 
            </tr>

            <tr style="background-color:#efefef; font-size: 12px"> 
              <th style="width: 15%" class="text-uppercase text-center">
                <h4>
                  <strong>
                    {{translate "TABLE.COLUMNS.PRINCIPAL_CENTERS" }}
                  </strong>
                </h4>
              </th>
              <th style="width: 5%" class="text-uppercase text-center">
                <strong> 
                  {{translate "TABLE.COLUMNS.COST" }}
                </strong>
              </th>
              
              {{#each auxiliaryCostCenters }}
                <th style="width: auto;"> 
                  <span style="writing-mode: vertical-rl; text-orientation: sideways;" class="text-capitalize">
                    {{ label }}
                  </span>
                </th>
              {{/each}}
              <th style="width: 5%; background-color: #dedede" class="text-uppercase text-center">
                <strong> 
                  {{translate "TABLE.COLUMNS.TOTAL" }}
                </strong>
              </th>
            </tr>
          </thead>

          <tbody>
            {{#each principal}}
            <tr>
              <td> {{ label}} </td>
              <td class="text-right">
                <strong>
                  {{debcred balanceCost ../metadata.enterprise.currency_id}}
                </strong>
              </td>
              {{#each costValues }}
                <td class="text-right">
                  {{#if value}}
                    {{debcred value ../../metadata.enterprise.currency_id}}
                  {{/if}}
                </td>
              {{/each}}
              <td class="text-right">
                {{debcred totalCost ../metadata.enterprise.currency_id}}
              </td>
            </tr>
            {{/each}}
          </tbody>

          <tfoot>
            <tr style="background-color:#efefef; font-size: 12px"> 
              <td style="width: 15%" colspan="2" class="text-uppercase">
                <strong>
                  {{translate "TABLE.COLUMNS.TOTAL_DISTRIBUTE" }}
                </strong>
              </td>
              {{#each auxiliaryCostCenters }}
                <td class="text-right">
                  <strong>
                    {{debcred total ../metadata.enterprise.currency_id}}
                  </strong>
                </td>
              {{/each}}
              <td class="text-right">
                <strong>
                  {{debcred totalGeneralCost metadata.enterprise.currency_id}}
                </strong>
              </td>
            </tr>

            <tr style="background-color:#efefef; font-size: 12px"> 
              <td style="width: 15%" colspan="2" class="text-uppercase">
                <strong>
                  {{translate "TABLE.COLUMNS.RATE_DISTRIBUTION" }}
                </strong>
              </td>
              {{#each auxiliaryCostCenters }}
                <td class="text-right">
                  <strong>
                    {{ percentage ratio }}
                  </strong>
                </td>
              {{/each}}
              <td class="text-right">
                <strong>
                  {{ percentage ratioCost }}
                </strong>
              </td>
            </tr>

            <tr style="background-color:#fafafa; font-size: 12px"> 
              <td style="width: 15%" class="text-uppercase">
                <strong>
                  {{translate "TABLE.COLUMNS.TOTAL_GENERAL" }}
                </strong>
              </td>
              <td class="text-right">
                <strong>
                  {{debcred totalPrincipalCost metadata.enterprise.currency_id}}
                </strong>
              </td>

              {{#each auxiliaryCostCenters }}
                <td class="text-right">
                  <strong>
                    {{debcred balance ../metadata.enterprise.currency_id}}
                  </strong>
                </td>
              {{/each}}
              <td style="width: 5%; background-color: #dedede" class="text-uppercase text-center">
                <strong>  
                  {{debcred allCost metadata.enterprise.currency_id}}
                </strong>
              </td>
            </tr>
          </tfoot>
        </table>
        <p class="text-right">
          <em>
            <strong>
              * {{translate 'TABLE.COLUMNS.TOTAL_UNICORPORATED_CHARGE'}}: {{debcred unDistributedCost metadata.enterprise.currency_id}}    
            </strong>
          </em>
        </p>   
        <br>
        <br>
        {{/if}}

        {{#if display.distributionProfit }}
        <table style="page-break-after: always" class="table table-striped table-condensed table-report table-bordered">
          <thead>
            <tr style="background-color:#cfcfcf"> 
              <th class="text-uppercase text-center" colspan="{{ colspanAuxProfit }}">
                <h4>
                  <strong>
                    {{translate "TABLE.COLUMNS.DISTRIBUTION_PROFIT" }}
                  </strong>
                </h4>
              </th> 
            </tr>

            <tr style="background-color:#efefef; font-size: 12px"> 
              <th style="width: 15%" class="text-uppercase text-center">
                <h4>
                  <strong>
                    {{translate "TABLE.COLUMNS.PRINCIPAL_CENTERS" }}
                  </strong>
                </h4>
              </th>
              <th style="width: 5%" class="text-uppercase text-center"><strong> {{translate "TABLE.COLUMNS.PROFIT" }} </strong></th>
              {{#each auxiliaryProfitCenters }}
                <th style="width: auto;"> 
                  <span style="writing-mode: vertical-rl; text-orientation: sideways;" class="text-capitalize">
                    {{ label }}
                  </span>
                </th>
              {{/each}}
              <th style="width: 5%; background-color: #dedede" class="text-uppercase text-center">
                <strong> 
                  {{translate "TABLE.COLUMNS.TOTAL" }}
                </strong>
              </th>
            </tr>
          </thead>

          <tbody>
            {{#each principal}}
            <tr>
              <td> {{ label}} </td>
              <td class="text-right">
                <strong>
                  {{debcred balanceProfit ../metadata.enterprise.currency_id}}
                </strong>
              </td>
              {{#each profitValues }}
                <td class="text-right">
                  {{#if value}}
                    {{debcred value ../../metadata.enterprise.currency_id}}
                  {{/if}}
                </td>
              {{/each}}
              <td class="text-right">
                {{debcred totalProfit ../../metadata.enterprise.currency_id}}
              </td>
            </tr>
            {{/each}}
          </tbody>

          <tfoot>
            <tr style="background-color:#efefef; font-size: 12px"> 
              <td style="width: 15%" colspan="2" class="text-uppercase">
                <strong>
                  {{translate "TABLE.COLUMNS.TOTAL_DISTRIBUTE" }}
                </strong>
              </td>
              {{#each auxiliaryProfitCenters }}
                <td class="text-right">
                  <strong>
                    {{debcred total ../metadata.enterprise.currency_id}}
                  </strong>
                </td>
              {{/each}}

              <td class="text-right">
                <strong>
                  {{debcred totalGeneralProfit metadata.enterprise.currency_id}}
                </strong>
              </td>
            </tr>

            <tr style="background-color:#fafafa; font-size: 12px"> 
              <td style="width: 15%" colspan="2" class="text-uppercase">
                <strong>
                  {{translate "TABLE.COLUMNS.RATE_DISTRIBUTION" }}
                </strong>
              </td>
              {{#each auxiliaryProfitCenters }}
                <td class="text-right">
                  <strong>
                    {{ percentage ratio }}
                  </strong>
                </td>
              {{/each}}
              <td class="text-right">
                <strong>
                  {{ percentage ratioProfit }}
                </strong>
              </td>
            </tr>

            <tr style="background-color:#fafafa; font-size: 12px"> 
              <td style="width: 15%" class="text-uppercase">
                <strong>
                  {{translate "TABLE.COLUMNS.TOTAL_GENERAL" }}
                </strong>
              </td>
              <td class="text-right">
                <strong>
                  {{debcred totalPrincipalProfit metadata.enterprise.currency_id}}
                </strong>
              </td>

              {{#each auxiliaryProfitCenters }}
                <td class="text-right">
                  <strong>
                    {{debcred balance ../metadata.enterprise.currency_id}}
                  </strong>
                </td>
              {{/each}}
              <td style="width: 5%; background-color: #dedede" class="text-uppercase text-center">
                <strong>  
                  {{debcred allProfit metadata.enterprise.currency_id}}
                </strong>
              </td>
            </tr>
          </tfoot>
        </table>
        <p class="text-right">
          <strong>
            <em> * {{translate 'TABLE.COLUMNS.TOTAL_UNICORPORARED_PRODUCT'}}: {{debcred unDistributedProfit metadata.enterprise.currency_id}}</em>
          </strong>
        </p>
        <br>
        <br>
        {{/if}}

        {{#if display.analysisPrincipal }}
        <table style="page-break-after: always" class="table table-striped table-condensed table-report table-bordered">
          <thead>
            <tr style="background-color:#cfcfcf"> 
              <th class="text-uppercase text-center" colspan="5">
                <h4>
                  <strong>
                    {{translate "TABLE.COLUMNS.ANALYSIS_PRINCIPAL_CENTER" }}
                  </strong>
                </h4>
              </th> 
            </tr>
            <tr>
              <th style="width: auto;">
                <strong>
                  {{translate "TABLE.COLUMNS.PRINCIPAL_CENTERS" }}
                </strong>
              </th>              
              <th style="width: 10%" class="text-uppercase text-center"><strong> {{translate "TABLE.COLUMNS.PROFIT" }} </strong></th>
              <th style="width: 10%" class="text-uppercase text-center"><strong> {{translate "TABLE.COLUMNS.COST" }} </strong></th>
              <th style="width: 10%" class="text-uppercase text-center"><strong> {{translate "TABLE.COLUMNS.RESULTS" }} </strong></th>
              <th style="width: 5%" class="text-uppercase text-center"><strong> </strong></th>
            </tr>

          </thead>

          <tbody>
            {{#each principal}}
            <tr>
              <td> {{ label}} </td>
              <td class="text-right">
                <strong>
                  {{debcred totalProfit ../metadata.enterprise.currency_id}}
                </strong>
              </td>
              <td class="text-right">
                <strong>
                  {{debcred totalCost ../metadata.enterprise.currency_id}}
                </strong>
              </td>
              <td class="text-right">
                <strong>
                  {{debcred results ../metadata.enterprise.currency_id}}
                </strong>
              </td>
              <td>
                {{#if resultCredit}}
                  <i class="fa fa-check-circle"></i>
                {{/if}}
              </td>
            </tr>
            {{/each}}
          </tbody>

          <tfoot>
            <tr style="background-color:#dfdfdf; font-size: 15px"> 
              <td style="width: 15%;" class="text-uppercase">
                <strong>
                  {{translate "TABLE.COLUMNS.TOTAL" }}
                </strong>
              </td>
              <td class="text-right">
                <strong>
                  {{debcred totalGeneralProfit metadata.enterprise.currency_id}}
                </strong>
              </td>
              <td class="text-right">
                <strong>
                  {{debcred totalGeneralCost metadata.enterprise.currency_id}}
                </strong>
              </td>
              <td class="text-right">
                <strong>
                  {{debcred results metadata.enterprise.currency_id}}
                </strong>
              </td>
              <td class="text-right">
                {{#if resultCredit}}
                  <i class="fa fa-check-circle"></i>
                {{/if}}

                {{#if resultDebit}}
                  <i class="fa fa-level-down"></i>
                {{/if}}
              </td>
            </tr>
          </tfoot>
        </table>
        {{/if}}

      </div>
    </div>
  </div>
</body>
</html>