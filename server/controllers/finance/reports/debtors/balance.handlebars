{{> head title="REPORT.CLIENT_DEBTOR_ACCOUNT_BALANCE_REPORT"}}

<body>
  <main class="container">
    {{> header }}

    <h3 class="text-center text-capitalize">
      <strong>{{translate "REPORT.CLIENT_DEBTOR_ACCOUNT_BALANCE_REPORT"}}</strong>
    </h3>

    <h4 class="text-center text-capitalize">
      {{ fiscalYear.label }}
    </h4>

    <section>
      <table class="table table-condensed table-report table-bordered">
        <thead>
          <tr class="text-capitalize text-center" style="background-color: #ddd;">
            <th>{{translate "TABLE.COLUMNS.ACCOUNT"}}</th>
            <th>{{translate "TABLE.COLUMNS.NAME"}}</th>
            <th>{{translate "REPORT.OPENING_BALANCE"}}</th>
            <th>{{translate "TABLE.COLUMNS.DEBIT"}}</th>
            <th>{{translate "TABLE.COLUMNS.CREDIT"}}</th>
            <th>{{translate "REPORT.CLOSING_BALANCE"}}</th>
          </tr>
        </thead>
        <tbody>
          <!-- print a row for each debtor account-->
          {{#each rows as | row |}}
            <tr>
              <td>{{row.accountNumber}}</td>
              <td>{{row.groupName }}</td>
              <td class="text-right">{{currency row.openingBalance ../metadata.enterprise.currency_id}}</td>
              <td class="text-right">{{currency row.debit  ../metadata.enterprise.currency_id}}</td>
              <td class="text-right">{{currency row.credit  ../metadata.enterprise.currency_id}}</td>
              <td class="text-right">{{currency row.closingBalance ../metadata.enterprise.currency_id}}</td>
            </tr>
          {{else}}
            {{> emptyTable columns="6" }}
          {{/each}}
        </tbody>

        <tfoot>
          <th colspan="2">{{translate "TABLE.COLUMNS.TOTAL"}}</th>
          <th class="text-right">{{currency footer.openingBalance  ../metadata.enterprise.currency_id}}</th>
          <th class="text-right">{{currency footer.debit  ../metadata.enterprise.currency_id}}</th>
          <th class="text-right">{{currency footer.credit  ../metadata.enterprise.currency_id}}</th>
          <th class="text-right">{{currency footer.closingBalance  ../metadata.enterprise.currency_id}}</th>
        </tfoot>
      </table>
    </section>
  </main>
</body>
