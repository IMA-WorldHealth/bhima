{{> head title="REPORT.AGED_DEBTORS.TITLE"}}

<body>
  <main class="container">
    {{> header }}

    <h3 class="text-center">
      {{translate "REPORT.AGED_DEBTORS.TITLE"}}
    </h3>

    <h4 class="text-center">
      <span class="text-capitalize">{{translate "FORM.LABELS.UNTIL_DATE"}}</span> {{date this.date}}
    </h4>

    <!-- margin is the cell size -->
    <section>
      <table class="table table-condensed table-report">
        <thead>
          <tr class="text-capitalize">
            <th class="text-center">{{translate "TABLE.COLUMNS.NAME"}}</th>
            <th class="text-center" style="width:15%">{{translate "FORM.LABELS.ACCOUNT_NUMBER"}}</th>
            <th class="text-center">{{translate "REPORT.AGED_DEBTORS.ZERO_TO_THIRTY_DAYS"}}</th>
            <th class="text-center">{{translate "REPORT.AGED_DEBTORS.THIRTY_TO_SIXTY_DAYS"}}</th>
            <th class="text-center">{{translate "REPORT.AGED_DEBTORS.SIXTY_TO_NINETY_DAYS"}}</th>
            <th class="text-center">{{translate "REPORT.AGED_DEBTORS.OVER_NINETY_DAYS"}}</th>
            <th class="text-center">{{translate "TABLE.COLUMNS.TOTAL"}}</th>
          </tr>
        </thead>
        <tbody>

          <!-- print a row for each debtor -->
          {{#each debtors}}
            <tr>
              <th>{{this.name}}</th>
              <td class="text-left">{{this.number}}</td>
              <td class="text-right">
                {{#if this.thirty}}
                  {{currency this.thirty ../this.currency_id}}
                {{/if}}  
              </td>
              <td class="text-right">
                {{#if this.sixty}}
                  {{currency this.sixty ../this.currency_id}}
                {{/if}}
              </td>
              <td class="text-right">
                {{#if this.ninety}}
                  {{currency this.ninety ../this.currency_id}}
                {{/if}}
              </td>
              <td class="text-right">
                {{#if this.excess}}
                  {{currency this.excess ../this.currency_id}}
                {{/if}}
              </td>
              <td class="text-right">{{currency this.total ../this.currency_id}}</td>
            </tr>
          {{else}}
            {{> emptyTable columns=7}}
          {{/each}}
        </tbody>
        {{#if aggregates}}
          <tfoot>
            <tr>
              <th colspan="2">{{translate "TABLE.COLUMNS.TOTAL"}}</th>
              <th class="text-right">{{currency aggregates.thirty this.currency_id}}</th>
              <th class="text-right">{{currency aggregates.sixty this.currency_id}}</th>
              <th class="text-right">{{currency aggregates.ninety this.currency_id}}</th>
              <th class="text-right">{{currency aggregates.excess this.currency_id}}</th>
              <th class="text-right">{{currency aggregates.total this.currency_id}}</th>
            </tr>
          </tfoot>
        {{/if}}
      </table>
    </section>
  </main>
</body>
