<meta charset="UTF-8">
<link href="{{absolutePath}}/css/bhima-bootstrap.css" rel="stylesheet">

<div class="container-fluid">
  <!-- header  -->
  <div class="row">
    <div class="col-xs-4">
      <h3 style="margin:2px;">{{ model.enterprise.name }} ({{ model.enterprise.abbr}})</h3>
      <span>{{translate 'FORM.LABELS.PHONE' model.lang}}: {{ model.enterprise.phone }}</span><br>
      <span>{{translate 'FORM.LABELS.EMAIL' model.lang}}: {{ model.enterprise.email }}</span><br>
    </div>
    <div class="col-xs-4">
      &nbsp;
    </div>
    <div class="col-xs-4 text-right">
      <small>{{ model.project.name}} ({{ model.project.abbr }})</small>
    </div>
  </div>

  <!-- body  -->
  <div class="row">
    <div class="col-xs-12">

      <!-- page title  -->
      <h1 style="margin:15px; font-weight:bold" class="text-center">{{uppercase (translate 'VOUCHERS.GLOBAL.TITLE' model.lang) }}</h1>

      <!-- voucher info  -->
      <table class="table table-condensed">
        <thead>
          <tr>
            <th>{{translate 'FORM.LABELS.REFERENCE' model.lang}}</th>
            <th>{{translate 'FORM.LABELS.DATE' model.lang}}</th>
            <th>{{translate 'FORM.LABELS.DESCRIPTION' model.lang}}</th>
            <th class="text-right">{{translate 'FORM.LABELS.AMOUNT' model.lang}}</th>
            <th>{{translate 'FORM.LABELS.BY' model.lang}}</th>
          </tr>
        </thead>
        <tbody>
          {{#each model.data.rows }}
            {{#if @first}}
              <tr>
                <td>{{ reference }}</td>
                <td>{{date date }}</td>
                <td>{{ description }}</td>
                <td class="text-right">{{currency amount }}</td>
                <td>{{ user }}</td>
              </tr>
            {{/if}}
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">

    <div class="col-xs-6">
      <!-- voucher items info  -->
      <table class="table table-condensed">
        <thead>
          <tr>
            <th>{{translate 'FORM.LABELS.ACCOUNT' model.lang}}</th>
            <th>{{translate 'FORM.LABELS.DESCRIPTION' model.lang}}</th>
            <th class="text-right">{{translate 'FORM.LABELS.DEBIT' model.lang}}</th>
            <th class="text-right">{{translate 'FORM.LABELS.CREDIT' model.lang}}</th>
          </tr>
        </thead>
        <tbody>
          {{#each model.data.rows}}
          <tr>
            <td>{{ number }}</td>
            <td>{{ label }}</td>
            <td class="text-right">{{currency debit }}</td>
            <td class="text-right">{{currency credit }}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <small>{{translate 'FORM.LABELS.SIGNATURE' model.lang}}</small>
  <hr>

</div>
