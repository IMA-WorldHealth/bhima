{
  "name": "bhima",
  "version": "1.31.0",
  "description": "A rural hospital information management system.",
  "main": "npm run build",
  "scripts": {
    "app": "cross-env NODE_ENV=production gulp build && cd bin && cross-env NODE_ENV=production node server/app.js",
    "dev": "cross-env NODE_ENV=development gulp build && cd bin && cross-env NODE_ENV=development node server/app.js",
    "test": "cross-env SUITE=\"ALL\" ./sh/test.sh",
    "test:client-unit": "cross-env SUITE=\"client-unit\" ./sh/test.sh",
    "test:install": "cross-env ./sh/install-tests.sh",
    "test:integration": "cross-env SUITE=\"integration\" ./sh/test.sh",
    "test:integration:stock": "cross-env SUITE=\"integration-stock\" ./sh/test.sh",
    "test:server-unit": "cross-env SUITE=\"server-unit\" ./sh/test.sh",
    "test:show-results": "./sh/test-show-results.sh",
    "test:e2e-all": "cross-env SUITE=\"end-to-end-all\" ./sh/test-e2e-all.sh",
    "test:e2e-account": "cross-env SUITE=\"end-to-end-account\" TESTS=\"test/end-to-end/account/\" TEST_NUM=account ./sh/test-e2e.sh",
    "test:e2e-1": "cross-env SUITE=\"end-to-end\" TESTS=\"test/end-to-end/account/ test/end-to-end/cash/ test/end-to-end/cashboxes/ test/end-to-end/choiceListManagement/ test/end-to-end/configurationAnalysisTools/\" TEST_NUM=1 ./sh/test-e2e.sh",
    "test:e2e-2": "cross-env SUITE=\"end-to-end\" TESTS=\"test/end-to-end/costCenter/ test/end-to-end/creditorGroups/ test/end-to-end/dataCollectorManagement/ test/end-to-end/debtors/ test/end-to-end/depots/ test/end-to-end/displayMetadata/ test/end-to-end/editJournal/ test/end-to-end/employees/ test/end-to-end/employeesConfig/ test/end-to-end/enterprises/ test/end-to-end/entities/ test/end-to-end/errors/ test/end-to-end/exchange/\" TEST_NUM=2 ./sh/test-e2e.sh",
    "test:e2e-3": "cross-env SUITE=\"end-to-end\" TESTS=\"test/end-to-end/fillForm/ test/end-to-end/fiscalYears/ test/end-to-end/functions/ test/end-to-end/grades/ test/end-to-end/holidays/ Test/end-to-end/indicatorsFiles/ test/end-to-end/inventory/ test/end-to-end/invoicingFees/ test/end-to-end/iprTaxes/ test/end-to-end/iprTaxesConfig/ test/end-to-end/journal/\" TEST_NUM=3 ./sh/test-e2e.sh",
    "test:e2e-4": "cross-env SUITE=\"end-to-end\" TESTS=\"test/end-to-end/locations/ test/end-to-end/login/ test/end-to-end/navigation/ test/end-to-end/offdays/ test/end-to-end/patient/\" TEST_NUM=4 ./sh/test-e2e.sh",
    "test:e2e-5": "cross-env SUITE=\"end-to-end\" TESTS=\"test/end-to-end/payrollConfig/ test/end-to-end/payrollProcess/ test/end-to-end/priceList/ test/end-to-end/purchases/ test/end-to-end/reports/ test/end-to-end/rubrics/ test/end-to-end/rubricsConfig/\" TEST_NUM=5 ./sh/test-e2e.sh",
    "test:e2e-6": "cross-env SUITE=\"end-to-end\" TESTS=\"test/end-to-end/stock/\" TEST_NUM=6 ./sh/test-e2e.sh",
    "test:e2e-7": "cross-env SUITE=\"end-to-end\" TESTS=\"test/end-to-end/services/ test/end-to-end/settings/ test/end-to-end/shared/ test/end-to-end/staffingIndice/ test/end-to-end/subsidies/ test/end-to-end/suppliers/ test/end-to-end/surveyForm/ test/end-to-end/tags/ test/end-to-end/transactionType/ test/end-to-end/user/\" TEST_NUM=7 ./sh/test-e2e.sh",
    "test:e2e-8": "cross-env SUITE=\"end-to-end\" TESTS=\"test/end-to-end/verificationLinks/ test/end-to-end/visits/ test/end-to-end/vouchers/ test/end-to-end/ward/ test/end-to-end/weekendConfig/\" TEST_NUM=8 ./sh/test-e2e.sh",
    "test:clean": "./sh/test-clean-reports.sh",
    "build": "cross-env ./node_modules/.bin/gulp build",
    "build:db": "cross-env ./sh/build-database.sh",
    "build:clean": "cross-env ./sh/build-init-database.sh",
    "build:stock": "cross-env ./sh/build-stock-database.sh",
    "build:docker": "cross-env ./sh/docker-init.sh",
    "migrate": "cross-env ./sh/setup-migration-script.sh",
    "watch": "cross-env ./node_modules/.bin/gulp watch",
    "check:lang": "cross-env node ./utilities/translation/tfcomp.js client/src/i18n/en client/src/i18n/fr",
    "release": "release-it --disable-metrics"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IMA-WorldHealth/bhima.git"
  },
  "release-it": {
    "git": {
      "changelog": "git log --invert-grep --grep=\"^chore\\|^Merge\" --pretty=format:\"* %s (%h)\" ${from}...${to}"
    },
    "github": {
      "release": true,
      "assets": [
        "*.tar.gz"
      ]
    },
    "hooks": {
      "before:init": "node utilities/translation/tfcomp.js client/src/i18n/en client/src/i18n/fr",
      "after:bump": [
        "rm -rf bin",
        "cross-env NODE_ENV=production yarn build",
        "rm bin/.env",
        "cp package.json bin/",
        "cp yarn.lock bin/",
        "cp .env.sample bin/.env",
        "cp -R server/models/ bin/server/",
        "mkdir bhima-${version}",
        "mv bin bhima-${version}/",
        "cross-env tar -czvf ${version}.tar.gz bhima-${version}"
      ],
      "after:release": [
        "rm ${version}.tar.gz",
        "rm -rf bhima-${version}",
        "echo Successfully released ${name} v${version} to ${repo.repository}."
      ]
    },
    "npm": {
      "publish": false,
      "ignoreVersion": true
    }
  },
  "keywords": [
    "bhima",
    "health",
    "HIS",
    "hospital information system",
    "rural accounting"
  ],
